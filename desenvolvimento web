    <script>
        function mostrarNoticia() {
          const numeroNoticia = document.getElementById("numeroNoticia").value;
          if (numeroNoticia >= 1 && numeroNoticia <= 3) {
            const noticia = document.querySelector(".container .row .col-md-4:nth-child(" + numeroNoticia + ")");
            noticia.style.display = "block";
          } else {
            alert("O número da notícia deve ser entre 1 e 3.");
          }
        }
function abrirModal()
  document.querySelector("#modal").style.display = "block";
  <script>
function alterarCor() {
  document.querySelector("nav").style.backgroundColor = "red"
}
